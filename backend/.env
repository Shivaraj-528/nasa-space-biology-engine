# NASA Space Biology Engine Environment Configuration

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/nasa_space_biology
POSTGRES_URI=postgresql://postgres:password@localhost:5432/nasa_space_biology
REDIS_URL=redis://localhost:6379

# API Configuration
NODE_ENV=development
PORT=8000
AI_SERVICE_PORT=8001
FRONTEND_PORT=3000

# Authentication
JWT_SECRET=dev_jwt_secret_change_me_in_production
JWT_EXPIRES_IN=7d
ADMIN_EMAILS=admin@nasa.gov,test@example.com

# OSDR API (NASA Open Science Data Repository)
OSDR_API_BASE_URL=https://osdr.nasa.gov
OSDR_API_KEY=

# Queue Processing
ENABLE_QUEUE_PROCESSING=true

# External Services
ELASTICSEARCH_URL=http://localhost:9200

# Feature Flags
ENABLE_AI_PREDICTIONS=true
ENABLE_DATA_EXPORT=true
ENABLE_COLLABORATION=true
ENABLE_REAL_TIME_UPDATES=true
