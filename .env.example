# NASA Space Biology Engine Environment Configuration

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/nasa_space_biology
POSTGRES_URI=postgresql://postgres:password@localhost:5432/nasa_space_biology
REDIS_URL=redis://localhost:6379

# API Configuration
NODE_ENV=development
PORT=8000
AI_SERVICE_PORT=8001
FRONTEND_PORT=3000

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
OAUTH2_CLIENT_ID=your_nasa_oauth2_client_id
OAUTH2_CLIENT_SECRET=your_nasa_oauth2_client_secret
OAUTH2_REDIRECT_URI=http://localhost:3000/auth/callback
OAUTH2_AUTHORIZE_URL=https://auth.nasa.gov/oauth2/authorize
OAUTH2_TOKEN_URL=https://auth.nasa.gov/oauth2/token
OAUTH2_USERINFO_URL=https://auth.nasa.gov/oauth2/userinfo
OAUTH2_SCOPE=openid profile email
BACKEND_BASE_URL=http://localhost:8000
FRONTEND_CALLBACK_URL=http://localhost:3000/auth/callback

# NASA API Keys
NASA_API_KEY=your_nasa_api_key_here
GENELAB_API_KEY=your_genelab_api_key_here
NBISC_API_KEY=your_nbisc_api_key_here

# External Services
ELASTICSEARCH_URL=http://localhost:9200
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=nasa-space-biology-data

# Email Configuration (for notifications)
SMTP_HOST=smtp.nasa.gov
SMTP_PORT=587
SMTP_USER=your_email@nasa.gov
SMTP_PASS=your_email_password

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=csv,json,xlsx,pdf,png,jpg,jpeg

# AI/ML Configuration
MODEL_CACHE_SIZE=1000
PREDICTION_TIMEOUT=30000
BATCH_SIZE=32
GPU_ENABLED=true

# Security
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true
CSRF_PROTECTION=true

# Feature Flags
ENABLE_AI_PREDICTIONS=true
ENABLE_DATA_EXPORT=true
ENABLE_COLLABORATION=true
ENABLE_REAL_TIME_UPDATES=true
